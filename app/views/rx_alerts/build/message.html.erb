<%= form_for @rx_alert, url: wizard_path, method: :put do |f| %>
  <%= hidden_field_tag(:rx_alert_id, @rx_alert.id) %>
  <%= f.label 'Enter Message' %>
  <%= f.text_area :message %>
  <%= f.label 'Restock Time' %>
  <%= f.text_field :expected_restock %>
  <%= f.label 'Availability' %>
  <%= f.text_field :availability %>
  <%= f.submit 'Review' %>
<% end %>
