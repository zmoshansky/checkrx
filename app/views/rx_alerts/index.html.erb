<h2>Recent Alerts<%= link_to 'Add New Alert', new_rx_alert_path, {class: 'nav-button nav-active-action nav-top-right'} %></h2>
<div class="activity-feed">
  <% if @rx_alerts.empty? %>
    <p>No recent alerts</p>
  <% else %>
    <% unless @todays_alerts.empty? %>
      <span class="activity-date-group">Today</span>
      <% RxAlert.get_rev_sorted_alerts_from_array(@todays_alerts,100).each do |alert| %>
        <%= render 'alert_feed_item', alert: alert %>
      <% end %>
    <% end %>
    <% unless @last_week_alerts.empty? %>
      <span class="activity-date-group">Past Week</span>
      <% RxAlert.get_rev_sorted_alerts_from_array(@last_week_alerts,100).each do |alert| %>
        <%= render 'alert_feed_item', alert: alert %>
      <% end %>
    <% end %>
    <% unless @older_alerts.empty? %>
      <span class="activity-date-group">Older</span>
      <% RxAlert.get_rev_sorted_alerts_from_array(@older_alerts,20).each do |alert| %>
        <%= render 'alert_feed_item', alert: alert %>
      <% end %>
    <% end %>
  <% end %>
  <%# render partial: 'rx_alert_tile', collection: @rx_alerts %>
</div>